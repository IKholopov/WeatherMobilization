<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/weather_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="20sp"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/weather_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView android:id="@+id/weather_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_location"
            app:layout_constraintBottom_toTopOf="@+id/weather_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView android:id="@+id/weather_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/swipe_down_to_refresh"
            android:textSize="28sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="44sp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_message"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView android:id="@+id/pressure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pressure"
            android:layout_margin="8dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_message"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/dark"
            app:layout_constraintBottom_toBottomOf="@+id/pressure_label"
            app:layout_constraintLeft_toRightOf="@+id/pressure_label"/>
        <TextView android:id="@+id/wind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wind"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pressure_label"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView android:id="@+id/wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/dark"
            app:layout_constraintBottom_toBottomOf="@+id/wind_label"
            app:layout_constraintLeft_toRightOf="@+id/wind_label"/>
        <ImageView android:id="@+id/wind_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingTop="2dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/wind_label"
            app:layout_constraintLeft_toRightOf="@+id/wind_speed"/>
        <TextView android:id="@+id/updated_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updated"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wind_label"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView android:id="@+id/updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textSize="16sp"
            android:textColor="@color/dark"
            app:layout_constraintBottom_toBottomOf="@+id/updated_label"
            app:layout_constraintLeft_toRightOf="@+id/updated_label"/>
        <TextView android:id="@+id/forecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forecast"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@+id/weather_list"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <android.support.v7.widget.RecyclerView android:id="@+id/weather_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>