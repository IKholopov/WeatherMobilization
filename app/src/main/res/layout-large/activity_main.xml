<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:baselineAligned="false"
    tools:context="com.ikholopov.yamblz.weather.weathermobilization.ui.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent">
        <FrameLayout android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <FrameLayout android:id="@+id/right_container"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent">
        <TextView android:id="@+id/select_city_hint"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_city_to_show_weather"/>
    </FrameLayout>
</LinearLayout>
